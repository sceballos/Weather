<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/recent_search_current_condition_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recent_search_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="City"
        app:layout_constraintBottom_toBottomOf="@+id/recent_search_current_condition_iv"
        app:layout_constraintStart_toEndOf="@+id/recent_search_current_condition_iv"
        app:layout_constraintTop_toTopOf="@+id/recent_search_current_condition_iv" />

    <TextView
        android:id="@+id/recent_search_current_temperature_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Day"
        app:layout_constraintBottom_toBottomOf="@+id/recent_search_city_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_search_current_condition_tv" />

    <TextView
        android:id="@+id/recent_search_current_condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Day"
        app:layout_constraintBottom_toTopOf="@+id/recent_search_current_temperature_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recent_search_city_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>